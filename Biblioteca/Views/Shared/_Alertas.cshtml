@{
    var mensagemSucesso = TempData["success"] as string;
    var mensagemErro = TempData["error"] as string;
}

@if (!string.IsNullOrEmpty(mensagemSucesso))
{
    <div class="alert alert-success" role="alert">
        <span class="alert-inner--icon"><i class="fe fe-thumbs-up"></i></span>
        <span class="alert-inner--text"><strong>Success!</strong> @mensagemSucesso </span>
    </div> 
}

@if (!string.IsNullOrEmpty(mensagemErro))
{
    <div class="alert alert-danger mb-0" role="alert">
        <span class="alert-inner--icon"><i class="fe fe-slash"></i></span>
        <span class="alert-inner--text"><strong>Erro!</strong> @mensagemErro</span>
    </div>  
}

